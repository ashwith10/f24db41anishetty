extends layout

block content
  h1= title
  style.
    body {background-color: lightblue ;}

  if (toShow == null)
    div.alert.alert-danger
      h3 Error: diary not found.
      p The diary with the provided ID does not exist in the collection.
      a.btn.btn-primary(href="/diary") Back to Collection
  else
    - let diary_id = toShow._id
    - let diary_name = toShow.diary_name
    - let author = toShow.author
    - let year = toShow.year

    div.container
      div.card.shadow.mb-4
        div.card-body
          div.row.mb-3
            div.col-md-4.font-weight-bold Diary ID:
            div.col-md-8 #{diary_id}
          div.row.mb-3
            div.col-md-4.font-weight-bold Diary Name:
            div.col-md-8 #{diary_name}
          div.row.mb-3
            div.col-md-4.font-weight-bold Diary author :
            div.col-md-8 #{author}
          div.row.mb-3
            div.col-md-4.font-weight-bold Diary year :
            div.col-md-8 #{year}

      a.btn.btn-primary(href="/diary") Back to Collection
